@inject Microsoft.Extensions.Localization.IStringLocalizer<WordlistAdd> Loc

<EditForm Model="wordlist">
    <label style="margin-top: 10px;">@Loc["WordlistType"]</label>
    <InputSelect @bind-Value="wordlist.Type">
        @foreach (var type in wordlistTypes)
        {
            <option value="@type">@type</option>
        }
    </InputSelect><br />
    <label>@Loc["Name"]</label>
    <InputText @bind-Value="wordlist.Name" />
    <label style="margin-top: 10px;">@Loc["Purpose"]</label>
    <InputText @bind-Value="wordlist.Purpose" />
    <hr style="margin-top: 10px;" />
    <RadzenTabs>
        <Tabs>
            <RadzenTabsItem Text="@Loc["Upload"]">
                <input type="file" @ref=inputTypeFileElement @onchange="ProcessUploadedWordlist" />
                <br />
                <br />
                <progress max="@max" value="@value" /><span style="margin-left: 15px;">@(progress.ToString("F"))% @Loc["Uploaded"]</span>
                <br />
                <button type="button" class="btn btn-success" style="margin-top: 10px;" @onclick="Upload">@Loc["Upload"]</button>
            </RadzenTabsItem>
            <RadzenTabsItem Text="@Loc["FileSystem"]">
                <label>@Loc["BaseDirectory"]</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <button class="btn btn-success" style="height: 30px; line-height: 10px;"
                                @onclick="@(() => LoadTree(baseDirectory))">@Loc["Ok"]</button>
                    </div>
                    <div style="width: 80%">
                        <InputText @bind-Value="baseDirectory" />
                    </div>
                </div>
                <RadzenTree Change="@LogChange" Data="@entries" Expand="@LoadFiles" Style="width: 100%; height: 300px">
                    <RadzenTreeLevel Text="@GetTextForNode" Template="@FileOrFolderTemplate" />
                </RadzenTree>
                <p>@Loc["SelectedFile"]: @selectedFile</p>
                <button type="button" class="btn btn-success" style="margin-top: 10px;" @onclick="SelectFile">@Loc["Select"]</button>
            </RadzenTabsItem>
        </Tabs>
    </RadzenTabs>
</EditForm>
