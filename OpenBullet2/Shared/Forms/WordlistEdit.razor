@using OpenBullet2.Entities
@using OpenBullet2.Services 
@inject IModalService ModalService
@inject IWordlistRepository WordlistRepo
@inject PersistentSettingsService PersistentSettings

<EditForm Model="Wordlist">
    <label style="margin-top: 10px;">Wordlist Type</label>
    <InputSelect @bind-Value="Wordlist.Type">
        @foreach (var type in wordlistTypes)
        {
            <option value="@type">@type</option>
        }
    </InputSelect><br />
    <label>Name</label>
    <InputText @bind-Value="Wordlist.Name" />
    <label>Purpose</label>
    <InputText @bind-Value="Wordlist.Purpose" />
    <button type="button" class="btn btn-success" style="margin-top: 10px;" @onclick="Edit">Edit</button>
</EditForm>

@code {

    [CascadingParameter] BlazoredModalInstance BlazoredModal { get; set; }
    [Parameter] public WordlistEntity Wordlist { get; set; }
    private List<string> wordlistTypes;

    protected override void OnInitialized()
    {
        wordlistTypes = PersistentSettings.Environment.WordlistTypes.Select(w => w.Name).ToList();
    }

    private async Task Edit()
    {
        await WordlistRepo.Update(Wordlist);
        BlazoredModal.Close();
    }
}
