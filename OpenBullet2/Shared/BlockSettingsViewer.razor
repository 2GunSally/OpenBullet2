@using OpenBullet2.Models

<EditForm Model="Block">
    <h6 class="font-weight-bold text-warning">Label:</h6>
    <InputText @bind-Value="Block.Settings.Label" />
</EditForm>

@if (Block.Info.ReturnType.HasValue)
{
    <EditForm Model="Block">
        <h6 class="font-weight-bold text-warning" style="margin-top: 20px;">Output Variable:</h6>
        <InputText @bind-Value="Block.OutputVariable" />
    </EditForm>
}

<h6 class="font-weight-bold text-warning" style="margin-top: 20px;">Settings:</h6>
@foreach (var setting in Block.Settings.Settings)
{
    <BlockInputField BlockSetting="setting" />
    <hr />
}

@code {
    [Parameter] public BlockInstance Block { get; set; }
}
