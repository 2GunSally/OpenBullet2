@page "/jobs/create"
@page "/jobs/create/{Type}"
@using OpenBullet2.Models.Jobs
@inject Microsoft.Extensions.Localization.IStringLocalizer<JobCreator> Loc
@attribute [Authorize(Roles = "Admin,Guest")]

<div style="margin-bottom: 20px;">
    @switch (jobOptions)
    {
        case MultiRunJobOptions x:
            <MultiRunOptions Options="x" />
            break;

        case ProxyCheckJobOptions x:
            <ProxyCheckOptions Options="x" />
            break;
    }
</div>

<button class="btn btn-success" style="margin-bottom: 30px;" @onclick="Create">@Loc["CreateJob"]</button>
