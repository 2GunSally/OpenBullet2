@page "/config/edit/lolicode"
@inject Microsoft.Extensions.Localization.IStringLocalizer<EditLC> Loc
@attribute [Authorize(Roles = "Admin")]

<div class="container-fluid">
    <div class="row mb-2">
        <span class="text-warning">@Loc["LoliCodeEditor"]</span>
    </div>
    <div class="row">
        <div class="list-group list-group-horizontal">
            <button class="btn btn-sm btn-outline-primary" @onclick="(() => showUsings = !showUsings)"><span class="oi oi-cog"></span> @Loc["ToggleUsings"]</button>
        </div>
    </div>
    @if (showUsings)
    {
        <div class="row mt-3">
            <p>@Loc["UsingsInfo"]</p><br />
            <div class="w-100">
                <EditForm Model="config.Settings.ScriptSettings">
                    <InputListOfStrings @bind-List="config.Settings.ScriptSettings.CustomUsings" />
                </EditForm>
            </div>
        </div>
    }
    <div class="row">
        <div class="col px-0">
            <div class="w-100 mt-3" style="height: 500px;">
                <MonacoEditor @ref="_editor" Id="loli-editor" ConstructionOptions="EditorConstructionOptions"
                              OnDidInit="OpenBullet2.Helpers.MonacoThemeSetter.SetLolicodeTheme" OnKeyUp="SaveScript" OnDidPaste="SaveScript" />
            </div>
            <br />
            <BullettaHelp Title="@help1x00" Messages="new string[] { help1x01, help1x02, help1x03 }" />
            <hr />
        </div>
    </div>
    <div class="row">
        <Debugger Config="config" />
    </div>
</div>

@code {
    private bool showUsings = false;

    string help1x00 => Loc["Help1x00"];
    string help1x01 => Loc["Help1x01"];
    string help1x02 => Loc["Help1x02"];
    string help1x03 => Loc["Help1x03"];
}
